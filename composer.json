{
  "name": "vasylhryn/catalog",
  "description": "Product catalog with XML import and dynamic filtering",
  "type": "project",
  "require": {
    "php": "^8.1",
    "ext-pdo": "*",
    "ext-redis": "*",
    "ext-xmlreader": "*",
    "ext-dom": "*",
    "symfony/console": "^6.0",
    "vlucas/phpdotenv": "^5.5",
    "predis/predis": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --testdox --colors=always"
  }
}